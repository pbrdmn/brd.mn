---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: default.njk
eleventyComputed:
  title: Articles tagged “{{ tag }}”
permalink: /tags/{{ tag | slugify }}/
---
<h1>{{title}}</h1>

{% set postslist = collections[ tag ] %}

{%- for article in postslist | reverse -%}
<article class="snippet">
  {%- if article.data.image %}
  <img src="{{article.url}}{{article.data.image}}" alt="{{article.data.imageAlt}}" />
  {%- endif %}
  <h2><a href="{{article.url}}">{{article.data.title}}</a></h2>
  <p>{{article.data.description}}</p>
  <footer>Posted on {{ article.date | postDate }}</footer>
</article>
{%- else -%}
<p>There are no articles available.</p>
{%- endfor %}

<p>See <a href="{{ '/articles/' | url }}">all articles</a>.</p>