---
layout: default.njk
---
<h1>{{ title }}</h1>

{{content | safe }}

{%- for article in collections.articles | reverse -%}
<article class="snippet">
  {%- if article.data.image %}
  <img src="{{article.url}}{{article.data.image}}" alt="{{article.data.imageAlt}}" />
  {%- endif %}
  <h2><a href="{{article.url}}">{{article.data.title}}</a></h2>
  <p>{{article.data.description}}</p>
  <footer>
    {%- if article.data.updated %}
    Updated on <time datetime="{{ article.data.updated }}">{{ article.data.updated | postDate }}</time>
    {%- else %}
    Posted on {{ article.data.date | postDate }}
    {%- endif %}
  </footer>
</article>
{%- else -%}
<p>There are no articles available.</p>
{%- endfor %}