---
layout: default.njk
---
<h1>{{ title }}</h1>

{{content | safe }}

<h2>Recent Articles</h2>

{%- for article in collections.articles | reverse | limit(3) -%}
<article class="snippet">
  {%- if article.data.image %}
  <img src="{{article.url}}{{article.data.image}}" alt="{{article.data.imageAlt}}" />
  {%- endif %}
  <h2><a href="{{article.url}}">{{article.data.title}}</a></h2>
  <p>{{article.data.description}}</p>
  <footer>Posted on {{ article.data.date | postDate }}</footer>
  <footer>Created on {{ article.data.date }}</footer>
  <footer>Updated on {{ article.data.updated }}</footer>
</article>
{%- endfor %}

<a href="/articles/">All articles</a>