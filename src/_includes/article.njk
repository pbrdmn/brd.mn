---
layout: default.njk
---
<article>
  <header>
    <h1>{{ title }}</h1>
    {%- if image %}
    <figure class="article__figure">
      <img src="{{ image }}" alt="{{ imageAlt }}" />
      <figcaption>{{ imageAlt }}</figcaption>
    </figure>
    {%- endif %}
  </header>

  {{content | safe }}

  <footer>
    Tags: {{ tags.join(', ') }}<br />
    Published on: {{ page.date | postDate }}
  </footer>
</article>