---
layout: default.njk
---
<article>
  <header>
    <h1>{{ title }}</h1>
    {%- if image %}
      <img src="{{ image }}" alt="{{ imageAlt }}" title="{{ imageAlt }}" />
    {%- endif %}
  </header>

  <footer>
    <p>
      {% for tag in tags | filterTagList %}
        <a href="/tags/{{ tag }}/">#{{ tag }}</a>
      {% endfor %}
      <br />
      <time datetime="{{page.date}}" title="Published on {{ page.date | postDate }}">Published on {{ page.date | postDate }}</time>
      {%- if updated %} 
        <br />
        <time datetime="{{ updated }}" title="Updated on {{ updated | postDate }}">Updated on {{ updated | postDate }}</time>
      {%- endif %}
    </p>
  </footer>

  <hr />

  {{content | safe }}
</article>