---
layout: default.njk
---
<article>
  <header>
    <h1>{{ title }}</h1>
  </header>

  {%- if image %}
  <figure class="article__figure">
    <img src="{{ image }}" alt="{{ imageAlt }}" />
    <figcaption>{{ imageAlt }}</figcaption>
  </figure>
  {%- endif %}

  {{content | safe }}

  <footer>
    Tags:
    {% for tag in tags | filterTagList %}
      <a href="/tags/{{ tag }}/">{{ tag }}</a>
    {% endfor %}
    <br />
  
    Published on: <time datetime="{{page.date}}">{{ page.date | postDate }}</time>
    {%- if updated %}<br />
    Updated on: <time datetime="{{ updated }}">{{ updated | postDate }}</time>
    {%- endif %}
  </footer>
</article>