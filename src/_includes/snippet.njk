<article>
  {%- if article.data.thumb %}
  <a href="{{article.url}}"><img src="{{article.url}}{{article.data.thumb}}" alt="{{article.data.imageAlt}}" width="200" height="112" /></a>
  {%- elif article.data.image %}
  <a href="{{article.url}}"><img src="{{article.url}}{{article.data.image}}" alt="{{article.data.imageAlt}}" width="200" height="112" loading="lazy" decoding="async" /></a>
  {%- endif %}

  <h2><a href="{{article.url}}">{{article.data.title}}</a></h2>
  <footer>
    <p>
      {%- if article.data.updated %}
        Updated <time datetime="{{article.data.updated}}" title="Updated on {{ article.data.updated | postDate }}">on {{ article.data.updated | postDate }}</time>
      {%- else %}
        Published <time datetime="{{article.data.date}}" title="Published on {{ article.data.date | postDate }}">on {{ article.data.date | postDate }}</time>
      {%- endif %}
      in
      {% for tag in article.data.tags | filterTagList %}
        <a href="/tags/{{ tag }}/">#{{ tag }}</a>
      {% endfor %}
    </p>
  </footer>

  <p>{{article.data.description}}</p>
</article>