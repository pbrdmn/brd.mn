<article class="snippet">
  <div class="summary">
    <h2><a href="{{article.url}}">{{article.data.title}}</a></h2>
    <p>{{article.data.description}}.</p>

    <footer>
      {%- if article.data.updated %}
        <time datetime="{{ article.data.updated | postDate }}" title="Updated on {{ article.data.updated | postDate }}">{{ article.data.updated | postDate }}</time>
      {%- else %}
        <time datetime="{{ article.data.date | postDate }}" title="Published on {{ article.data.date | postDate }}">{{ article.data.date | postDate }}</time>
      {%- endif %}
      in
      {% for tag in article.data.tags | filterTagList %}
        <a href="/tags/{{ tag }}/">#{{ tag }}</a>
      {% endfor %}
    </footer>
  </div>

  {%- if article.data.thumb %}
  <a class="thumb" href="{{article.url}}"><img src="{{article.url}}{{article.data.thumb}}" alt="{{article.data.imageAlt}}" srcset="{{article.url}}{{article.data.thumb}}, {{article.url}}{{article.data.image}} 2x" width="200" height="112" loading="lazy" decoding="async"></a>
  {%- elif article.data.image %}
  <a class="thumb" href="{{article.url}}"><img src="{{article.url}}{{article.data.image}}" alt="{{article.data.imageAlt}}" width="200" height="112" loading="lazy" decoding="async"></a>
  {%- endif %}
</article>