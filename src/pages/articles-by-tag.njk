---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
eleventyComputed:
  title: "Articles about {{ tag }}"
permalink: /tags/{{ tag | slugify }}/
---

{% set postslist = collections[ tag ] %}

{%- for article in postslist | reverse -%}
  {%- include 'snippet_lazy.njk' %}
{%- else -%}
<p>There are no articles available.</p>
{%- endfor %}

<p><a href="/articles/">All articles</a></p>